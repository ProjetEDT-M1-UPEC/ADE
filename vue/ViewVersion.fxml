<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.ViewVersionController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <VBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
               <children>
                  <Label text="Arborescence :" cache="true" prefHeight="40"/>
                  <Label fx:id="jsp" cache="true" prefHeight="40">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <JFXListView fx:id="branchList" onMouseClicked="#selectVersion" prefHeight="200" />
         </children></VBox>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="295.0" BorderPane.alignment="CENTER">
         <buttons>
            <JFXButton fx:id="btnCharge" alignment="CENTER" buttonType="RAISED" cache="true" onAction="#charge" ripplerFill="#050f9e" text="Charger" />
            <JFXButton fx:id="btnDelete" buttonType="RAISED" cache="true" onAction="#compare" ripplerFill="#050f9e" text="Comparer" />
            <JFXButton fx:id="btnCancel" buttonType="RAISED" cache="true" onAction="#cancel" ripplerFill="#050f9e" text="Annuler">
               <opaqueInsets>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </opaqueInsets></JFXButton>
         </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
